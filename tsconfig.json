{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "public",
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "ts-node": { "files": true },
  "exclude": ["node_modules"],
  "include": ["src", "api"]
}
